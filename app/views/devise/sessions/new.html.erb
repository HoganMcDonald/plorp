<div class="w-full max-w-sm m-auto flex flex-col items-center">
  <h2 class="text-xl text-white font-bold mb-8">Log In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :email, class: 'block text-slate-400 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
      </div>
      <div class="md:w-2/3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-700 appearance-none border-2 border-slate-700 rounded w-full py-2 px-4 text-white leading-tight focus:outline-none focus:border-purple-500' %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password, class: 'block text-slate-400 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
      </div>
      <div class="md:w-2/3">
        <%= f.email_field :password, autofocus: true, autocomplete: "new-password", class: 'bg-gray-700 appearance-none border-2 border-slate-700 rounded w-full py-2 px-4 text-white leading-tight focus:outline-none focus:border-purple-500' %>
      </div>
    </div>

    <div class="w-full flex justify-center">
      <%= f.submit "Log In", class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 mb-4 rounded focus:outline-none focus:border-purple-500' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
