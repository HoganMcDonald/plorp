<%= form_with(model: [budget, spending_plan], class: "contents") do |form| %>
  <% if spending_plan.errors.any? %>
    <div id="error_explanation" class="bg-red-600 bg-opacity-40 text-red-100 p-2 px-3 py-2 font-medium rounded-lg mb-6">
      <h2><%= pluralize(spending_plan.errors.count, "error") %> prohibited this budget from being saved:</h2>

      <ul>
        <% budget.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= form.label :limit, class: 'block text-slate-400 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
      <%= form.number_field :limit, autofocus: true, class: 'bg-gray-700 appearance-none border-2 border-slate-700 rounded w-full py-2 px-4 text-white leading-tight focus:outline-none focus:border-purple-500' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= form.label :account_id, class: 'block text-slate-400 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
      <%= form.collection_select :account_id, accounts, :id, :name, {}, class: 'bg-gray-700 appearance-none border-2 border-slate-700 rounded w-full py-2 px-4 text-white leading-tight focus:outline-none focus:border-purple-500' %>
    </div>
  </div>

  <div class="w-full flex justify-center">
    <%= form.submit "Create budget", class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 mb-4 rounded focus:outline-none focus:border-purple-500' %>
  </div>
<% end %>
